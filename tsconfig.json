{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": ["lambda/products/layers/productsLayer/nodejs/productsRepository.ts"],
      "/opt/nodejs/productEventsLayer": ["lambda/products/layers/productEventsLayer/nodejs/productEvent.ts"],
      "/opt/nodejs/ordersLayer": ["lambda/orders/layers/ordersLayer/nodejs/orderRepository.ts"],
      "/opt/nodejs/ordersApiLayer": ["lambda/orders/layers/ordersApiLayer/nodejs/orderApi.ts"],
      "/opt/nodejs/ordersEventsLayer": ["lambda/orders/layers/orderEventsLayer/nodejs/orderEvent.ts"],
      "/opt/nodejs/orderEventsRepositoryLayer": [
        "lambda/orders/layers/orderEventsRepositoryLayer/nodejs/orderEventsRepositoryLayer.ts"
      ],
      "/opt/nodejs/invoiceTransaction": ["lambda/invoices/layers/invoiceTransaction/nodejs/invoiceTransaction.ts"],
      "/opt/nodejs/invoiceWSConnection": ["lambda/invoices/layers/invoiceWSConnection/nodejs/invoiceWSConnection.ts"],
      "/opt/nodejs/invoiceRepository": ["lambda/invoices/layers/invoiceRepository/nodejs/invoiceRepository.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}